n=int(input("enter the size"))
a=[]
for i in range(n):
    e=int(input("enter the element"))
    a.append(e)
print(a)
one=[]
two=[]
for j in a:
    if a.index(j)%2==0:
        one.append(j)
    else:
        two.append(j)
q=max(one)
one.remove(q)
q=max(one)

p=max(two)
two.remove(p)
p=max(two)

print(q+p)
